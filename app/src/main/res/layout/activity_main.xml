<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Which one of these\n animals is a zebra?"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/giraffeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <ImageView
        android:id="@+id/giraffeImage"
        android:layout_width="148dp"
        android:layout_height="126dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="328dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/giraffe" />

    <ImageView
        android:id="@+id/hippoImage"
        android:layout_width="126dp"
        android:layout_height="128dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="328dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/hippo" />

    <ImageView
        android:id="@+id/horseImage"
        android:layout_width="127dp"
        android:layout_height="125dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/horse" />

    <ImageView
        android:id="@+id/zebraImage"
        android:layout_width="129dp"
        android:layout_height="127dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/zebra" />

</androidx.constraintlayout.widget.ConstraintLayout>